{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2020",
    "lib": [
      "es2020"
    ],
    "module": "es2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
  },
  "include": [
    "src",
    "bin"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}
